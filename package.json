{
    "name": "api-whatsapp-ew",
    "version": "3.0.8",
    "description": "WhatsApp API built on top of Baileys-MD with PostgreSQL support.",
    "main": "server.js",
    "scripts": {
        "start": "node src/server.js",
        "dev": "nodemon",
        "format:check": "prettier --check .",
        "format:write": "prettier --write .",
        "lint:check": "eslint .",
        "lint:fix": "eslint --fix .",
        "test": "mocha tests/*.test.js --exit",
        "configure-husky": "npx husky install && npx husky add .husky/pre-commit \"npx --no-install lint-staged\""
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,jsx}": [
            "prettier --write",
            "git add"
        ],
        "*.{html,css,less,ejs}": [
            "prettier --write",
            "git add"
        ]
    },
    "repository": "git@github.com:melquifranco/api-whatsapp-ew.git",
    "author": "Melqui Franco",
    "license": "MIT",
    "engines": {
        "node": ">=20.0.0",
        "npm": ">=9.0.0"
    },
    "dependencies": {
        "@whiskeysockets/baileys": "6.4.0",
        "@adiwajshing/keyed-db": "^0.2.4",
        "axios": "^1.1.3",
        "dotenv": "^16.0.3",
        "ejs": "^3.1.7",
        "express": "^4.18.2",
        "express-exception-handler": "^1.3.23",
        "link-preview-js": "^3.0.0",
        "sequelize": "^6.35.2",
        "pg": "^8.11.3",
        "pg-hstore": "^2.3.4",
        "multer": "^1.4.5-lts.1",
        "pino": "^8.7.0",
        "qrcode": "^1.5.1",
        "sharp": "^0.30.5",
        "uuid": "^9.0.0"
    },
    "devDependencies": {
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^8.5.0",
        "husky": "^8.0.2",
        "lint-staged": "^13.0.4",
        "mocha": "^10.1.0",
        "nodemon": "^2.0.20",
        "prettier": "^2.8.0",
        "supertest": "^6.3.1",
        "sequelize-cli": "^6.6.2"
    }
}
